{
  "[css][markdown][javascript][graphql][html][yaml][json][python][cpp][c][java]": {
    "coc.preferences.formatOnSave": true
  },

  "python.linting.enabled": false,
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "black",
  "pyright.inlayHints.functionReturnTypes": false,
  "pyright.inlayHints.variableTypes": false,
  "pyright.inlayHints.parameterTypes": false,

  "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/utils/snips"],

  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },

  "languageserver": {
    "racket": {
      "command": "racket",
      "args": [
        "--lib",
        "racket-langserver"
      ],
      "filetypes": [
        "scheme"
      ]
    }
  },

  "java.jdt.ls.java.home": "/usr/lib64/openjdk-11",
  "java.maven.downloadSources": true,
  "java.import.maven.enabled": true,
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-1.8",
      "path": "/usr/lib64/icedtea8"
    },
    {
      "name": "JavaSE-11",
      "path": "/usr/lib64/openjdk-11",
      "default": true
    }
  ],
  "snippets.ultisnips.pythonPrompt": false
}
