audio_output {
	type "alsa"
	name "iFi Hip Dac 2"
	auto_resample "no"
	auto_channels "no"
	auto_format   "no"
	device "hw:CARD=Audio"
	mixer_type    "null"
}

audio_output {
	type "alsa"
	name "Nvidia HDMI"
	auto_resample "no"
	auto_channels "no"
	auto_format   "no"
	device "hw:CARD=NVidia,8"
	mixer_type    "null"
}

input {
       plugin "curl"
}

audio_output {
        type        "fifo"
	name        "FIFO"
	path        "/tmp/mpd.fifo"
	format      "44100:16:2"
}

resampler {
	plugin  "soxr"
	quality "very high"
}
