#!/bin/sh

if ! pgrep -x pulseaudio >/dev/null; then
    echo Pulse is Off
    exit
fi

if [ -e "/tmp/mic-status" ]; then
    cat "/tmp/mic-status"
else
    if amixer -D pulse sget Capture | grep '\[on\]' >/dev/null; then
        echo ON | tee "/tmp/mic-status"
    else
        echo MUTED | tee "/tmp/mic-status"
    fi
fi
