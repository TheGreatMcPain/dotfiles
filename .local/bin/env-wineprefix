#!/bin/bash

wineprefix_dir=${HOME}/wine-prefixes
pushd ${wineprefix_dir} > /dev/null

dir_array=($(ls -d *))
counter=1

echo Which directory for WINEPREFIX?

for dir in ${dir_array[*]};
do
    echo ${counter}: ${dir}
    counter=$((counter+1))
done

printf "Enter a number: "
read selection
selection=$((selection-1))

wineprefix="${HOME}/wine-prefixes/${dir_array[${selection}]}"

export WINEPREFIX=${wineprefix}

echo WINEPREFIX has been set to ${WINEPREFIX}.

popd > /dev/null

echo 'Is the prefix "win32" or "win64"?'

echo 1: win32
echo 2: win64
printf "Enter a number: "
read winearch

if [ ${winearch} -eq 1 ]
then
    export WINEARCH=win32
fi
if [ ${winearch} -eq 2 ]
then
    export WINEARCH=win64
fi
echo WINEARCH has been set to ${WINEARCH}
