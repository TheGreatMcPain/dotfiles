#!/bin/sh

devNum=$(xinput | grep -i touchpad | awk '{print $6}' | cut -c4-5)

status=$(xinput list-props $devNum | grep 167 | awk '{print $4}')

if [ $status -eq 1 ]; then
    if [ $1 = "enable" ]; then
        xinput enable $devNum
    else
        xinput disable $devNum
        if ! [ $1 = "disable" ]; then
            notify-send -u low "Touchpad Disabled"
        fi
    fi
else
    if [ $1 = "disable" ]; then
        xinput disable $devNum
    else
        xinput enable $devNum
        if ! [ $1 = "enable" ]; then
            notify-send -u low "Touchpad Enabled"
        fi
    fi
fi
