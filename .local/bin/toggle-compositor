#!/bin/sh

if pgrep -x "picom" >/dev/null; then
    pkill picom
    if which nvidia-settings >/dev/null; then
        nvidia-force-comp-pipeline --no
    fi
else
    if which nvidia-settings >/dev/null; then
        nvidia-force-comp-pipeline --yes
        picom -b -d :0
    else
        picom -b -d :0 --vsync
    fi
fi
