#!/bin/bash

if pgrep -x "compton" > /dev/null
then
    nvidia-settings --assign CurrentMetaMode="DVI-D-0: 1920x1080_144 +0+0 {ForceCompositionPipeline=Off}, DP-0: 1920x1080_60 +1920+0 {ForceCompositionPipeline=Off}"
    pkill compton
else
    nvidia-settings --assign CurrentMetaMode="DVI-D-0: 1920x1080_144 +0+0 {ForceCompositionPipeline=On}, DP-0: 1920x1080_60 +1920+0 {ForceCompositionPipeline=On}"
    compton -b -d :0
fi
