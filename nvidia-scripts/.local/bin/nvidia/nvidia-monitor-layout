#!/bin/sh

# Get current status of ForceCompositionPipeline.
forceComp=$(nvidia-force-comp-pipeline --status)

# Set primary monitor refresh-rate
if [ "$2"x = "120"x ]; then
    DVIHZ="120"
else
    DVIHZ="144"
fi

# Change number of enabled monitors based on input number.
if [ $1 = "1" ]; then
    # nvidia-settings --assign CurrentMetaMode="DVI-D-0: 1920x1080_$DVIHZ +0+0"
    nvidia-settings --aggien CurrentMetaMode="DP-0: 2560x1440_$DVIHZ +0+0"
elif [ $1 = "2" ]; then
    # nvidia-settings --assign CurrentMetaMode="DVI-D-0: 1920x1080_$DVIHZ +0+0, DP-0: nvidia-auto-select +1920+0"
    nvidia-settings --assign CurrentMetaMode="DP-0: 2560x1440_$DVIHZ +0+0, DVI-D-0: 1920x1080_60 +2560+0"
elif [ $1 = "3" ]; then
    # nvidia-settings --assign CurrentMetaMode="DVI-D-0: 1920x1080_$DVIHZ +0+0, DP-0: nvidia-auto-select +1920+0, HDMI-0: 1920x1080 +3840+0"
    nvidia-settings --assign CurrentMetaMode="DP-0: 2560x1440_144 +0+0, DVI-D-0: 1920x1080_60 +2560+0, HDMI-0: 1920x1080_60 +4480+0"
elif [ $1 = "3-1080p" ]; then
    nvidia-settings --assign CurrentMetaMode="DP-0: 2560x1440_144 +0+0 {viewportin=1920x1080}, DVI-D-0: 1920x1080_60 +1920+0, HDMI-0: 1920x1080_60 +3840+0"
elif [ $1 = "3-720p" ]; then
    # nvidia-settings --assign CurrentMetaMode="DVI-D-0: 1920x1080_144 +0+0 {viewportin=1280x720}, DP-0: 1920x1080_60 +1280+0, HDMI-0: 1920x1080_60 +3200+0"
    nvidia-settings --assign CurrentMetaMode="DP-0: 2560x1440_144 +0+0 {viewportin=1280x720}, DVI-D-0: 1920x1080_60 +1280+0, HDMI-0: 1920x1080_60 +3200+0"
fi
# "DP-0: 2560x1440_144 +0+0 {ForceCompositionPipeline=On}, DVI-D-0: 1920x1080_60 +2560+0 {ForceCompositionPipeline=On}, HDMI-0: 1920x1080_60 +4480+0 {ForceCompositionPipeline=On}"

# Make sure ForceCompositionPipeline is respected.
if [ "$forceComp"x = "On"x ]; then
    nvidia-force-comp-pipeline --yes > /dev/null
elif [ "$forceComp"x = "Off"x ]; then
    nvidia-force-comp-pipeline --no > /dev/null
fi

# Restart bspwm to refresh monitor settings.
bspc wm -r
